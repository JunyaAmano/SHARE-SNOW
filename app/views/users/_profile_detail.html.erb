<h6 class="border-bottom border-gray pb-2 mb-0">
  プロフィール
<% if user == current_user %>
  <%= link_to edit_user_path(user) do %>
    <i class="fas fa-edit ml-1" aria-hidden="true"></i>
  <% end %>
<% end %>
</h6>
  <%= render "users/profile", user: user %>
  <div class="col mt-1 mb-1 border-bottom border-gray">
    <strong>登録日時</strong> <span><%= user.created_at.strftime("%Y/%m/%d/%H:%M")%></span>
  </div>
  <div class="col mt-1 mb-1 border-bottom border-gray">
    <strong>車の有無</strong>
    <% if user.is_owned == false %>
      <span>無し</span>
    <% else %>
      <span>有り</span>
    <% end %>
  </div>
  <div class="col mt-1 mb-1 border-bottom border-gray">
    <strong>ホームゲレンデ</strong><br>
    <% if user.ski_slope_id.nil? %>
      <span>登録されていません</span>
    <% else %>
      <span><%= link_to user.ski_slope.title, ski_slope_path(user.ski_slope)%></span>
    <% end %>
  </div>
  <div class="col mt-1 mb-1 border-bottom border-gray">
    <strong>自己紹介</strong><br>
    <span class="text-muted mt-1"><%= user.introduction %></span>
  </div>

