      <h6 class="border-bottom border-gray pb-2 mb-0">チャットルーム</h6>
      <div id="message-link">
        <% groups.each do |group| %>
          <div class="media text-muted pt-1  border-bottom border-gray">
            <%= link_to group_path(group) do %>
              <%= attachment_image_tag(group.user, :image, size:'40x40', fallback: "no_image.png", size:'40x40' , class: "rounded-circle")%>
            <% end %>
            <div class="media-body mb-1 small lh-125">
              <div class="d-flex justify-content-between align-items-center w-100 mb-1">
                <strong class="text-gray-dark mr-2" >
                  <%= group.name %>
                    <% if group.user == current_user %>
                      <%= link_to group_path(group), method: :delete, data: {confirm: "削除しますか？"}, local:true do%>
                        <i class="fas fa-trash-alt ml-1" aria-hidden="true"></i>
                      <% end %>
                    <% end %>
                </strong>
                <%= link_to group_path(group), class: "btn btn-outline-primary btn-sm" do %>
                  <i class="fas fa-user"></i>エントリー
                <% end %>
              </div>
              <a class="ml-1 inline-block">
                <%= Chat.find_by(id: group.chat_ids.last)&.content %>
              </a>
            </div>
          </div>
        <% end %>
      </div>