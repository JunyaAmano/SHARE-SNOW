<% if user_signed_in? %>
    <% unless user.id == current_user.id %>
        <% if isRoom == true %>
          <%= link_to "DM", room_path(roomId), class:"btn btn-outline-info btn-sm user-show-chat col-md-12" %>
        <% else %>
          <%= form_with model: room, local: true do |f| %>
            <%= fields_for entry do |e| %>
            <%= e.hidden_field :user_id, value: user.id %>
            <% end %>
            <%= f.submit "DMを始める", class:"btn btn-outline-primary btn-sm user-show-chat col-md-12"%>
          <% end %>
        <% end %>
      <% end %>
<% end %>