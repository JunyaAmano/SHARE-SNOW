<% provide(:title, "新規会員登録") %>
<div class="row">
  <div class="col-md-12">
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h3 class="border-bottom border-gray pb-2 mb-0">ログイン</h3>
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <%= render "layouts/error_messages", resource: resource %>
        <div class="field form-group col-md-12">
        </div>
        <div class="field form-group col-md-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, rows:"", placeholder:"XXXXX@XXXXX.XXX", class: "col-sm-3 form-control-static name" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"パスワード(6文字以上)", class: "col-sm-3 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="actions col-md-12 border-bottom border-gray pb-2 mb-0">
          <%= f.submit "ログイン",class: 'btn btn-success btn-lg col-md-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>