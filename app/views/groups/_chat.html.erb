<div id="chat" data-chat_id="<%= chat.id %>">
  <div class="media text-muted pt-1  border-bottom border-gray">
    <%= link_to user_path(chat.user_id) do %>
		   <%= attachment_image_tag(chat.user, :image, size:'40x40', fallback: "no_image.png", size:'40x40', class: "rounded-circle" )%>
		<% end %>
    <div class="media-body mb-1 small lh-125">
      <div class="mb-1">
        <strong class="text-gray-dark mr-2" ><%= chat.user.name %></strong><%= time_ago_in_words(chat.created_at) %> ago
      </div>
      <a class="ml-1 inline-block"><%= chat.content %></a>
    </div>
  </div>
</div>