<% provide(:title, "新規会員登録") %>
<div class="row">
  <div class="col-md-12">
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h3 class="border-bottom border-gray pb-2 mb-0">会員登録</h3>
      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "layouts/error_messages", resource: resource %>
        <div class="field form-group col-md-12">
          <%= f.label :"ユーザーネーム", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, autofocus: true,placeholder:"2~10文字以内", class: "col-sm-3 form-control-static name" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, rows:"", placeholder:"XXXXX@XXXXX.XXX", class: "col-sm-3 form-control-static name" %>
        </div>


        <div class="field form-group col-md-12">
          <%= f.label :"自己紹介", class: "col-sm-3 control-label" %>
          <%= f.text_area :introduction, autofocus: true, class: "col-sm-4 form-control-static name" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"パスワード(6文字以上)", class: "col-sm-3 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"パスワード(確認用)", class: "col-sm-3 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="actions col-md-12 border-bottom border-gray pb-2 mb-0">
          <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-md-3' %>
        </div>
      <% end %>

      <div class="col-md-12">
        <h6 class="head-line title_h2r">既に登録済みの方</h6>
        <p class="new-link"><%#= render "shared/links" %>からログインしてください。</p>
      </div>
    </div>
  </div>
</div>
