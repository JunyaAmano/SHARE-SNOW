<footer class="container">
  <div class="d-block d-lg-none mt-5">
    <nav class="navbar nav fixed-bottom navbar-light bg-light">
      <li class="nav-item">
        <%= link_to user_posts_path, class: "nav-link" do %>
          <i class="fab fa-microblog" style="color: grey;"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to groups_path, class: "nav-link" do %>
          <i class="fas fa-users" style="color: grey;"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to events_path, class: "nav-link" do %>
          <i class="fas fa-snowboarding" style="color: grey;"></i>
        <% end %>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to rooms_path, class: "nav-link" do %>
          <i class="fas fa-comment" style="color: grey;"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <% if unchecked_notifications.any? %>
          <%= link_to notifications_path, class: "nav-link" do %>
            <i class="fa fa-bell" style="color: gold;"></i>
          <% end %>
        <% else %>
          <%= link_to notifications_path, class: "nav-link" do %>
            <i class="fa fa-bell" style="color: grey;"></i>
          <% end %>
        <% end %>
      </li>
      <% end %>
    </nav>
  </div>
  <div class="d-none d-lg-block mt-5">
    <p>© 2020 JunyaAmano <%= link_to "問い合わせ", new_inquiry_path %> · <a href="#">Terms</a></p>
  </div>
</footer>