<div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0"><%= title %></h6>
    <% users.each do |user| %>
    <div class="media text-muted pt-3">
      <%= link_to user_path(user) do %>
				<%= attachment_image_tag(user, :image, size:'95x95', fallback: "no_image.png", size:'95x95' , class: "rounded-circle")%>
			<% end %>
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark"><%= user.name %></strong>
          <!--フォローボタン-->
          <%= render "follow", user: user %>
        </div>
        <span class="ml-1"><%= user.gender %></span><span class="ml-1"><%= user.age %>歳</span><span class="ml-1"><%= user.riding_style %></span>
        <div class="mt-1 ml-1">
        <span class="mr-1">フォロワー : <%= link_to user.followers.count, followers_user_path(user) %></span>|<span class="mr-1">フォロー : <%= link_to user.following.count, following_user_path(user) %></span>
          </div>
      </div>
    </div>
    <% end %>
</div>
