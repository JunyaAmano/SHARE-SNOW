<% provide(:title, "投稿一覧") %>

<div class="row">
　<div class="col-md-4">
    <%= render "post_new", user_post: @user_post %>
</div>
  <div class=" col-md-7 p-3">
    <ul class="nav nav-tabs ">
      <li class="nav-item">
        <a href="#tab1" class="nav-link active small" data-toggle="tab">最新</a>
      </li>
      <li class="nav-item">
        <a href="#tab3" class="nav-link small" data-toggle="tab">いいね順(今月)</a>
      </li>
      <li class="nav-item">
        <a href="#tab4" class="nav-link small" data-toggle="tab">ポジティブ順(今月)</a>
      </li>
    </ul>
    <div class="tab-content">
        <div id="tab1" class="tab-pane active">
          <div class=" my-3 p-1 pb-3 bg-white rounded shadow-sm">
              <%= render "user_posts/post_index", user_posts: @user_posts %>
          </div>
        </div>
        <div id="tab3" class="tab-pane">
            <div class=" my-3 p-1 pb-3 bg-white rounded shadow-sm">
              <%= render "user_posts/post_index", user_posts: @ranking_users_posts %>
            </div>
        </div>
        <div id="tab4" class="tab-pane">
            <div class=" my-3 p-1 pb-3 bg-white rounded shadow-sm">
              <%= render "user_posts/post_index", user_posts: @score_users_posts %>
            </div>
        </div>
    </div>
  </div>
</div>