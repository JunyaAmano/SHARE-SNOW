<% provide(:title, "プロフィール編集") %>
<div class="row">
  <div class="col-md-12">
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h3 class="border-bottom border-gray pb-2 mb-0 mt-1">プロフィール編集</h3>
      <%= form_with model: @user, local: true do |f| %>
        <%= render "layouts/error_messages", resource: @user %>

        <div class="field form-group col-md-12">
          <%= f.label :"ユーザーネーム", class: "control-label" %>
          <%= f.text_field :name, autofocus: true,placeholder:"2~10文字以内", class: " form-control" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"自己紹介", class: " control-label" %>
          <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"年齢", class: "control-label" %>
          <%= f.select :age, options_for_select((18..99).to_a), class: 'form-control' , required: true %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"性別", class: " control-label" %>
          <%= f.radio_button :gender, :男性, checked: true%>
          <%= f.label :gender, "男性", {value: :男性, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :女性 %>
          <%= f.label :gender, "女性", {value: :女性, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :非公開 %>
          <%= f.label :gender, "非公開", {value: :非公開, style: "display: inline-block;"} %>
        </div>


        <div class="field form-group col-md-12">
          <%= f.label :"スタイル", class: " control-label" %>
          <%= f.radio_button :riding_style, :スノーボード, checked: true%>
          <%= f.label :riding_style, "スノーボード", {value: :スノーボード, style: "display: inline-block;"} %>
          <%= f.radio_button :riding_style, :スキー %>
          <%= f.label :riding_style, "スキー", {value: :スキー, style: "display: inline-block;"} %>
          <%= f.radio_button :riding_style, :その他 %>
          <%= f.label :riding_style, "その他", {value: :その他, style: "display: inline-block;"} %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"自家用車", class: " control-label" %>
          <%= f.radio_button :is_owned, :true, checked: true%>
          <%= f.label :iw_owned, "有", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_owned, :false, checked: true%>
          <%= f.label :iw_owned, "無", {value: :false, style: "display: inline-block;"} %>
        </div>

        <div class="field form-group col-md-12">
          <%= attachment_image_tag @user,:image,size:'200x200',fallback:'no_image.png',size:'200x200', class:"item-image " %><br>
          <%= f.label :'プロフィール画像', class:'control-label' %>
          <%= f.file_field :image %>
        </div>

        <div class="actions col-md-12 border-bottom border-gray pb-2 mb-0">
          <%= f.submit "プロフィール更新",class: 'btn btn-success btn-lg col-md-3' %>
        </div>
      <% end %>

    </div>
  </div>
</div>