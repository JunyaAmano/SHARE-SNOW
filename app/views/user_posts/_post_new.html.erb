    <div class="row">
      <div class="col-md-12">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
          <h6 class="border-bottom border-gray pb-2 mb-0">最新の投稿</h6>
          <%= form_with model:user_post, url: user_posts_path, local:true do |f| %>
            <%= attachment_image_tag @user_post,:image,size:'300x150',fallback:'no_image.png',size:'300x150', class:"item-image " %><br>
            <%= f.label :image,'画像アップロード', class:'btn btn-secondary rounded-pill' %>
            <%= f.file_field :image, style: 'display:none;' %>
            <br>
            <%= f.text_area :content, class:"form-control", rows:"3", placeholder:"もうすぐシーズンスタート!" %>
            <hr>
            <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-success" %>
          <% end %>
        </div>
      </div>
    </div>

<!--refileのプレビュー機能-->
<script>
$(function(){
    // inputのidから情報の取得
    $('#item_image').on('change', function (e) {
// ここから既存の画像のurlの取得
    var reader = new FileReader();
    reader.onload = function (e) {
        $(".image").attr('src', e.target.result);
    }
// ここまで
    reader.readAsDataURL(e.target.files[0]); //取得したurlにアップロード画像のurlを挿入
});
});
</script>
