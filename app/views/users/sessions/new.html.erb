<% provide(:title, "新規会員登録") %>
<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h3 class="border-bottom border-gray pb-2 mb-0">ログイン</h3>
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <%= render "layouts/error_messages", resource: resource %>
        <div class="field form-group col-md-12">
        </div>
        <div class="field form-group col-md-12">
          <%= f.label :"メールアドレス", class: "control-label" %>
          <%= f.email_field :email, autofocus: true, rows:"", placeholder:"XXXXX@XXXXX.XXX", class: "form-control" %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :"パスワード(6文字以上)", class: "control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions col-md-12 border-top border-gray pt-2 mb-0">
          <%= f.submit "ログイン",class: 'btn btn-success btn-lg ' %>
        </div>
      <% end %>
      <div class="col-md-12 mt-2">
        <h6 class="head-line title_h2r">会員登録がお済でない方</h6>
        <p class="new-link"><%= link_to "こちら", new_user_registration_path %>から会員登録お願いいたします。</p>
      </div>
    </div>
  </div>
</div>