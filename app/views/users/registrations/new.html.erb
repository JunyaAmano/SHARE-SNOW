<% provide(:title, "新規会員登録") %>
<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h3 class="border-bottom border-gray pb-2 mb-0">会員登録</h3>

      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "layouts/error_messages", resource: resource %>
        <div class="col-md-12 mb-3"><i class="fa fa-check-square red" aria-hidden="true" ></i>は入力必須項目</div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square" aria-hidden="true"></i>
          <%= f.label :"ユーザーネーム", class: "control-label" %>
          <%= f.text_field :name, autofocus: true,placeholder:"2~10文字以内", class: " form-control" %>
        </div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square" aria-hidden="true"></i>
          <%= f.label :"メールアドレス", class: "control-label" %>
          <%= f.email_field :email, autofocus: true, rows:"", placeholder:"XXXXX@XXXXX.XXX", class: " form-control" %>
        </div>


        <div class="field form-group col-md-12">
          <%= f.label :"自己紹介", class: " control-label" %>
          <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
        </div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square" aria-hidden="true"></i>
          <%= f.label :"年齢", class: "control-label" %>
          <%= f.select :age, options_for_select((18..99).to_a), class: 'form-control' , required: true %>
        </div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square" aria-hidden="true"></i>
          <%= f.label :"性別", class: "control-label" %>
          <%= f.radio_button :gender, :男性, checked: true%>
          <%= f.label :gender, "男性", {value: :男性, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :女性 %>
          <%= f.label :gender, "女性", {value: :女性, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :非公開 %>
          <%= f.label :gender, "非公開", {value: :非公開, style: "display: inline-block;"} %>
        </div>


        <div class="field form-group col-md-12">
          <i class="fa fa-check-square" aria-hidden="true"></i>
          <%= f.label :"スタイル", class: " control-label" %>
          <%= f.radio_button :riding_style, :スノーボード, checked: true%>
          <%= f.label :riding_style, "スノーボード", {value: :スノーボード, style: "display: inline-block;"} %>
          <%= f.radio_button :riding_style, :スキー %>
          <%= f.label :riding_style, "スキー", {value: :スキー, style: "display: inline-block;"} %>
          <%= f.radio_button :riding_style, :その他 %>
          <%= f.label :riding_style, "その他", {value: :その他, style: "display: inline-block;"} %>
        </div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square red" aria-hidden="true" ></i>
          <%= f.label :"自家用車", class: " control-label" %>
          <%= f.radio_button :is_owned, :true, checked: true%>
          <%= f.label :iw_owned, "有", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_owned, :false, checked: true%>
          <%= f.label :iw_owned, "無", {value: :false, style: "display: inline-block;"} %>
        </div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square red" aria-hidden="true" ></i>
          <%= f.label :"ホームゲレンデ", class: "control-label" %>
          <%= f.collection_select(:ski_slope_id, @ski_slopes, :id, :title, include_blank: '選択してください') %>
        </div>

        <div class="field form-group col-md-12">
          <%= f.label :'プロフィール画像アップ', class:'control-label' %>
          <%= f.file_field :image %>
        </div>


        <div class="field form-group col-md-12">
          <i class="fa fa-check-square red" aria-hidden="true" ></i>
          <%= f.label :"パスワード(6文字以上)", class: "control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field form-group col-md-12">
          <i class="fa fa-check-square red" aria-hidden="true" ></i>
          <%= f.label :"パスワード(確認用)", class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>


        <div class="actions col-md-12 border-top border-gray pt-2 mb-0">
          <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-md-3' %>
        </div>
      <% end %>

      <div class="col-md-12 mt-2">
        <h6 class="head-line title_h2r">既に登録済みの方</h6>
        <p class="new-link"><%= link_to "こちら", new_user_session_path %>からログインお願いいたします。</p>
      </div>
    </div>
  </div>
</div>
